<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Green Screen - Monitor Your Builds</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta http-equiv="refresh" content="15" />

  <link rel="stylesheet" href="css/style.css?v=2">
  <link rel="stylesheet" href="css/greenscreen.css">
  <link href="http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:regular,bold" rel="stylesheet" type="text/css">
  <style type="text/css">
    <% rows = [@rows, 1.0].max %>
    article {
      width: <%= (100 / @columns).to_i %>%;
      height: <%= 100 / rows %>%;
    }
  </style>
  <script src="js/libs/modernizr-1.7.min.js"></script>
</head>
<body>
  <% if @projects.empty? %>
    <p>No builds found</p>
  <% end %>

  <% @projects.each do |project| %>
    <article class="project">
      <section class="<%= project.last_build_status %> <%= project.activity.downcase %>">
        <h1 title="View <%= project.name %> project"><a href="<%= project.web_url%>"><%= project.name.gsub(/_/,' ') %></a></h1>
        <p class="status">
          Build <%= project.last_build_label %> was <%= "a" unless project.last_build_status == 'unknown' %>
          <strong><%= project.last_build_status %></strong>
          <time class="build-time invisible" datetime="<%= project.last_build_time.iso8601 %>" title="<%= project.last_build_time %>"><%= project.last_build_time %></time>.
        </p>
      </section>
    </article>
  <% end %>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
  <script>window.jQuery || document.write("<script src='js/libs/jquery-1.5.1.min.js'>\x3C/script>")</script>
  <script type="text/javascript" src="js/date_helper.js"></script>
  <script type="text/javascript">
    $(function() {
      $('.build-time').each(function(i, el) {
        $el = $(el);
        var ts = new Date(el.getAttribute('datetime'));
        $el.html( $el.time_ago_in_words_with_parsing( ts ) ).removeClass('invisible');
      });
    })
  </script>
</body>
</html>
